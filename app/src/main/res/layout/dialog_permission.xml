<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/permission_dialog_rational_tv_title"
        style="@style/TextAppearance.AppCompat.Title"
        tools:text="Grant permission"/>

    <TextView
        android:id="@+id/permission_dialog_rational_tv_message"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/permission_dialog_rational_tv_title"/>

    <RelativeLayout
        style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
        android:layout_below="@+id/permission_dialog_rational_tv_message">

        <Button
            android:id="@+id/permission_dialog_rational_btn_dismiss"
            style="@style/TextAppearance.AppCompat.Widget.Button"
            android:layout_toStartOf="@+id/permission_dialog_rational_btn_allow"
            android:text="@string/dismiss"/>

        <Button
            android:id="@+id/permission_dialog_rational_btn_allow"
            style="@style/TextAppearance.AppCompat.Widget.Button"
            android:layout_alignParentEnd="true"
            android:text="@string/allow"/>
    </RelativeLayout>
</RelativeLayout>
